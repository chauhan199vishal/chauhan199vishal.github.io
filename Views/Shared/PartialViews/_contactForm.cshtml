<section id="contactform">
    <div class="divider"></div>
    <div class="row">
        <div class="col-12">
            <h5 class="sectionmainheader center-align">
                Send Your Query
            </h5>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <form>
                <div class="row">
                    <div class="col col-12 s12 l6 input-field">
                        <i class="material-icons prefix">person</i>
                        <input id="txtname" data-length="30" type="text" class="validate">
                        <label for="txtname">Name</label>
                        <div class="helper-text" data-error="Validation Failed" data-success="Validation Passed"></div>

                    </div>
                    <div class="col col-12 s12 l6 input-field">
                        <i class="material-icons prefix">phone</i>
                        <input id="txtphone" type="tel" data-length="10" class="validate">
                        <label for="txtphone">Mobile No</label>
                        <span class="helper-text" data-error="Validation Failed" data-success="Validation Passed"></span>

                    </div>
                </div>
                <div class="row">
                    <div class="col col-12 s12 l6 input-field">
                        <i class="material-icons prefix">mail</i>
                        <input id="txtemail" data-length="100" type="email" class="validate">
                        <label for="txtemail">Email</label>
                        <span class="helper-text" data-error="Validation Failed" data-success="Validation Passed"></span>

                    </div>
                    <div class="col col-12 s12 l6 input-field">
                        <i class="material-icons prefix">send</i>
                        <textarea id="txtquery" data-length="300" class="materialize-textarea validate"></textarea>
                        <label for="txtquery">Query</label>
                        <span class="helper-text" data-error="Validation Failed" data-success="Validation Passed"></span>

                    </div>
                </div>
                <div class="row">
                    <div class="col col-12 input-field">
                        <button class="btn waves-effect left waves-light" type="submit" name="action">
                            Send
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</section>


<div class="divider"></div>
